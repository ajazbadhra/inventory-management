        <div class="card-body" id="invoice_estimate">
                <div class="row mt-1">
                    <div class="col">
                        <h2 class="text-center">Estimate</h2>
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-sm-6 text-left">
                        <h3 class="mb-1 text-dark">To : {{customer.name}}</h3>
                        <div>Phone: {{customer.phone}}</div>
                    </div>
                    <div class="col-sm-6 text-right">
                        <h3 class="text-dark mb-1">Bill No : {{billNo}}</h3>
                        <div>Date : {{date}}</div>
                    </div>
                </div>
                <div class="table-responsive m-4">
                    <table width=100% >
                        <thead border=1 width=100% class="table-bordered">
                            <tr>
                                <th class="center">No</th>
                                <th>Product Name</th>
                                <th class="center">Unit</th>
                                <th class="center">Rate</th>
                                <th class="right">Qty.</th>
                                <th class="center">Disc. %</th>
                                <th class="center">Net Rate</th>
                                <th class="right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
