                                <td class="center">{{inc @index}}</td>
                                <td class="left">{{productName}}</td>
                                <td class="right">{{unit}}</td>
                                <td class="center">{{rate}}</td>
                                <td class="right">{{qty}}</td>
                                <td class="center">{{dis}}</td>
                                <td class="center">{{netRate}}</td>
                                <td class="right">
                                    <strong class="text-dark">{{total}}</strong>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                        <tfoot class="table-bordered" >
